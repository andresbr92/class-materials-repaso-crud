<div class="container coasters-index">

  <a href="/coasters/new" class="btn btn-dark">Crear nueva montaña rusa</a>

  <h1 style="font-weight: 100">Índice de montañas rusas</h1>
  {{#each allCoasters}}

  <hr>
  <a href="/coasters/{{_id}}" class="btn btn-sm btn-dark">Ver detalles</a>
  <a href="/coasters/delete/{{_id}}" class="btn btn-sm btn-dark">Eliminar</a>
  <a href="/coasters/edit/{{_id}}" class="btn btn-sm btn-dark">Editar</a>
  <h4>{{name}}</h4>
  <p>{{description}}</p>
  <small><strong>Longitud: </strong> {{length}}m | <strong>Inversiones:  </strong> {{inversions}} | <strong>Parque: </strong> {{#each this.park}}{{this.name}}{{/each}}</small>
  <hr>
  {{/each}}
  
</div>